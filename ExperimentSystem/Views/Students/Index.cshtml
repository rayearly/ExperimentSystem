@model IEnumerable<ExperimentSystem.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MatricNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThesisTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassGroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BatchYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faculty)
        </th>
